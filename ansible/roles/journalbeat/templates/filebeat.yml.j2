filebeat.prospectors:
- input_type: log
  paths:
    - /var/log/nginx/logs/*access.log*
    - /var/log/nginx/logs/*error.log*
    - /var/lib/docker/containers/*/*.log
  exclude_files: [".gz$"]
  json.message_key: log
  json.keys_under_root: true
  processors:
  - add_docker_metadata: ~

output.logstash:
  hosts: ["{{ logstash_container_name }}:5044"]
